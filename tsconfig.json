{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": false,
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "moduleResolution": "node",
        "target": "es6",
        "outDir": "dist",
        "sourceMap": false,
        "declaration": true,
        "lib": [
            "es2017.object",
            "es2015",
            "es2017"
        ],
    },
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": ".",
    "watch": true,
    "include": [
        "src/**/*"
    ]
}